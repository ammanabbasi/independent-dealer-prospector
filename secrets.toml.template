# Streamlit Secrets Template
# Copy this file to .streamlit/secrets.toml and add your actual API keys
# 
# IMPORTANT: Never commit the actual secrets.toml file to your repository!
# The .gitignore file should include .streamlit/secrets.toml

# Google Maps API Key
# Required for Places API, Geocoding API, and Maps JavaScript API
# Get your key from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY = "your-google-maps-api-key-here"

# OpenAI API Key  
# Required for AI-powered sales intelligence features
# Get your key from: https://platform.openai.com/
OPENAI_API_KEY = "your-openai-api-key-here"

# CRM Database Configuration
DATABASE_URL = "sqlite:///crm_data.db"  # For development - use PostgreSQL for production

# Communication Services
TWILIO_ACCOUNT_SID = "your-twilio-account-sid"
TWILIO_AUTH_TOKEN = "your-twilio-auth-token"
TWILIO_PHONE_NUMBER = "your-twilio-phone-number"

SENDGRID_API_KEY = "your-sendgrid-api-key"
FROM_EMAIL = "sales@yourdomain.com"
FROM_NAME = "Sales Team"

# Optional: Add your contact information for the app
SUPPORT_EMAIL = "your-email@domain.com"
CONTACT_INFO = "Your Contact Information" 